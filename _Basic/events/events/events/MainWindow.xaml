<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Margin="10">
        <StackPanel HorizontalAlignment="Left" Margin="0 0 0 10">
            <Button x:Name="ButtonInformation" Content="Get Information" Click="Button_Click"/>
        </StackPanel>
        <TextBlock x:Name="InformationArea" Margin="0 0 0 10" Cursor="Hand" MouseDown="InformationArea_MouseDown" />
        <StackPanel x:Name="MainContent" HorizontalAlignment="Left" />
    </StackPanel>
</Window>
