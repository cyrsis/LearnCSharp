<Window x:Class="CommunicatingBetweenControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:CommunicatingBetweenControls.UserControls"
        Title="Job Management" Height="400" Width="600">
    <Grid Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="216*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" FontSize="26" VerticalAlignment="Center" TextWrapping="Wrap" Text="Job Management" Margin="10,9,0,9" Height="35" Width="200" />

        <Grid Name="ContainerGrid" Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>

        </Grid>
    </Grid>
</Window>
