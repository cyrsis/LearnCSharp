<Window x:Class="MediaPlayerDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ComboBox x:Name="comboUrl" VerticalAlignment="Top" Margin="10, 40, 12, 13" IsEditable="True">
            <ComboBoxItem>demo.mp3</ComboBoxItem>
            <ComboBoxItem>http://s8.pop-stream.de:8440</ComboBoxItem>
            <ComboBoxItem>http://media.ch9.ms/ch9/ac6d/287a1de2-43b8-4cdd-9b7e-92062643ac6d/TWC910252013.mp3</ComboBoxItem>

        </ComboBox>
        <MediaElement x:Name="mediaElement" Visibility="Collapsed" />
        <Button Content="Play" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="OnPlayClick"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="OnStopClick"/>
        <Button Content="Rewind" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75" Click="OnRewindClick"/>
        <Label x:Name="labelDuration" Content="" HorizontalAlignment="Left" Margin="261,4,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.737,0.192"/>
    </Grid>
</Window>
