<Window x:Class="PlayWav.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Play WAV File" Height="350" Width="525"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" 
        MouseLeftButtonUp="Window_MouseLeftButtonUp"
        MouseMove="Window_MouseMove">
    <Grid>
        <Label Content="Volume:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.579,0.346" FontSize="24"/>
        <Label x:Name="LabelVolume" Content="Label" HorizontalAlignment="Left" Margin="112,10,0,0" VerticalAlignment="Top" FontSize="24"/>
    </Grid>
</Window>
