<Window x:Class="ImageInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Reader" Height="350" Width="525">
    <Grid>
        <Button Content="Choose directory" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Button_Click" FontSize="18" Width="155"/>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" Margin="10,50,20,20" FontSize="18">
            <TextBlock x:Name="txtOutput"  
                VerticalAlignment="Top" HorizontalAlignment="Left"
                TextWrapping="Wrap" Margin="0,0,0,20"/>
        </ScrollViewer>
    </Grid>
</Window>
