<Window x:Class="CoursewareApp.ButtonExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoursewareApp"
        mc:Ignorable="d"
        Title="ButtonExample"
        Height="300"
        Width="500">
  <Grid MouseUp='All_MouseUp'
        PreviewMouseUp='All_PreviewMouseUp'>
    <Grid.RowDefinitions>
      <RowDefinition Height='94*' />
      <RowDefinition Height='142*' />
      <RowDefinition Height='33*' />
    </Grid.RowDefinitions>
    <StackPanel Orientation='Horizontal'>
      <Button MouseUp='All_MouseUp'
              PreviewMouseUp='All_PreviewMouseUp'
              Click='Button_Click'
              Grid.Row='0'
              Margin='30,10'
              Content='Button handles MouseUp event, raises clicked' Padding='6'/>
      <Image Source='Pretzel.jpg' 
             MouseUp='All_MouseUp'
             PreviewMouseUp='All_PreviewMouseUp' />
    </StackPanel>

    <ListBox x:Name='messageListBox'
             Grid.Row='1'
             />
    <Button x:Name='clearButton'
            Content='Clear list'
            Click='ClearButton_Click' Grid.Row='2'/>
  </Grid>
</Window>
