<Window x:Class="CoursewareApp.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:local="clr-namespace:CoursewareApp"
				mc:Ignorable="d"
				Title="MainWindow"
				Height="400"
				Width="600"
				FontSize='16'
				Background='#FF301606'
        WindowState='Maximized'>
	<Grid x:Name='mainGrid'
				Margin='20'
				Background='#FF6E4933'>

		<Border x:Name='mainBorder'
						BorderBrush='#FFAA4806'
						BorderThickness='15'
						ClipToBounds='True'>
			<Grid MouseWheel='Grid_MouseWheel'>

				<Image x:Name='pastryImage'
							 Source='Pastry.jpg'
							 Stretch='UniformToFill' />

				<Image x:Name='pretzelImage'
							 Source='Pretzel.jpg'
							 Stretch='UniformToFill' />

				<TextBlock x:Name='messageText'
									 Foreground='White'
									 FontSize='24' HorizontalAlignment='Right' VerticalAlignment='Top'
									 Text='1.0' />
			</Grid>
		</Border>
	</Grid>

</Window> 
