<Window x:Class="CustomerDataViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerDataViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock>First Name</TextBlock>
            <TextBlock Text="{Binding FirstName}"></TextBlock>
            <TextBlock>Second Name</TextBlock>
            <TextBlock Text="{Binding SecondName}"></TextBlock>
            <TextBlock>Height</TextBlock>
            <TextBlock Text="{Binding Height}"></TextBlock>
            <TextBlock>Age</TextBlock>
            <TextBlock Text="{Binding Age}"></TextBlock>
            <Button Name="LoadData" Click="LoadData_OnClick">Get Customer Data</Button>
        </StackPanel>
    </Grid>
</Window>
