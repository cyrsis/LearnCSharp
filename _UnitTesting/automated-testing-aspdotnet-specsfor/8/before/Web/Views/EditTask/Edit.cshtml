@using Microsoft.Web.Mvc
@using Web.Controllers
@model Web.Models.EditTaskForm

@{
	ViewBag.Title = "Edit " + Model.Title;
}

<h2>Edit Task</h2>
@using (Html.BeginForm<EditTaskController>(c => c.Edit(null), FormMethod.Post, new { role = "form" }))
{
	@Html.HiddenFor(x => x.Id)
	<div class="form-group">
		@Html.LabelFor(x => x.Title)
		@Html.TextBoxFor(x => x.Title, new { @class = "form-control input-lg" })
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.Description)
		@Html.TextAreaFor(x => x.Description, new { @class = "form-control input-lg" })
	</div>
	<button type="submit" class="btn btn-primary">Save Changes!</button>
}