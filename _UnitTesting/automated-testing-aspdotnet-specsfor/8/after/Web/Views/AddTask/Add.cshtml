@using Microsoft.Web.Mvc
@using Web.Controllers
@model Web.Models.AddTaskForm

@{
	ViewBag.Title = "Add a Task";
}

<h2>Add a Task</h2>
@using (Html.BeginForm<AddTaskController>(c => c.Add(null), FormMethod.Post, new { role = "form" }))
{
	<div class="form-group">
		@Html.LabelFor(x => x.Title)
		@Html.TextBoxFor(x => x.Title, new { @class = "form-control input-lg" })
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.AssignTo)
		@Html.TextBoxFor(x => x.AssignTo, new { @class = "form-control input-lg" })
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.Description)
		@Html.TextAreaFor(x => x.Description, new { @class = "form-control input-lg" })
	</div>
	<button type="submit" class="btn btn-primary">Add Task!</button>
}