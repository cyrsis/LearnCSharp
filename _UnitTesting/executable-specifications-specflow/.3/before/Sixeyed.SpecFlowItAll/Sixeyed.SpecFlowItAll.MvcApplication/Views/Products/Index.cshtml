@model IEnumerable<Sixeyed.SpecFlowItAll.Domain.Model.Product>

@{
    ViewBag.Title = "Index";
}

<h2>All Things To All People</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAvailable)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td id="name_@item.Code">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td id="stockCount_@item.Code">
            @Html.DisplayFor(modelItem => item.StockCount)
        </td>
        <td id="isAvailable_@item.Code">
            @Html.DisplayFor(modelItem => item.IsAvailable)
        </td>
        <td id="link_@item.Code">
            @Html.ActionLink("Details", "Details", new { id=item.Code })
        </td>
    </tr>
}

</table>
