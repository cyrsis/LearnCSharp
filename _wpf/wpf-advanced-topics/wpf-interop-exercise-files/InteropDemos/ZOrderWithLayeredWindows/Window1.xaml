<Window x:Class="ZOrderWithLayeredWindows.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    Title="Window1" SizeToContent="WidthAndHeight">
  <Grid Height="360" Width="360" x:Name="LayoutRoot">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.Background>
      <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="Gray" />
        <GradientStop Offset="0.5" Color="White" />
        <GradientStop Offset="1" Color="Gray" />
      </LinearGradientBrush>
    </Grid.Background>

    <TextBlock Text="WPF" FontSize="80" />
    <TextBlock Grid.Row="1" Text="WPF" FontSize="80" />
    <TextBlock Grid.Row="2" Text="WPF" FontSize="80" />
    
    <WindowsFormsHost Grid.Column="1" Margin="10,10,0,10" Background="{x:Static SystemColors.ControlBrush}">
      <wf:Label Text="Windows Forms" Font="Segoe UI, 26pt, style=Bold" AutoSize="False" BackColor="Control"
                TextAlign="MiddleCenter">
      </wf:Label>
    </WindowsFormsHost>
    <WindowsFormsHost Grid.Column="1" Grid.Row="1" Margin="10,10,0,10" Background="{x:Static SystemColors.ControlBrush}">
      <wf:Label Text="Windows Forms" Font="Segoe UI, 26pt, style=Bold" AutoSize="False" BackColor="Control"
                TextAlign="MiddleCenter">
      </wf:Label>
    </WindowsFormsHost>

        <WindowsFormsHost Grid.Column="1" Grid.Row="2" Margin="10,10,0,10" Background="{x:Static SystemColors.ControlBrush}">
      <wf:Label Text="Windows Forms" Font="Segoe UI, 26pt, style=Bold" AutoSize="False" BackColor="Control"
                TextAlign="MiddleCenter">
      </wf:Label>
    </WindowsFormsHost>


  </Grid>
</Window>
