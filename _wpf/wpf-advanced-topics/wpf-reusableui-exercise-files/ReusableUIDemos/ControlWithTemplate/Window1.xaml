<Window x:Class="ControlWithTemplate.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ControlWithTemplate"
    Title="Window1" Height="300" Width="300">
    <Grid>
    <local:TargetControl Width="100" Height="100" VerticalAlignment="Top">
      <local:TargetControl.Template>
        <ControlTemplate TargetType="local:TargetControl">
          <Grid>
            <Ellipse x:Name="PART_Target" Fill="Blue" />
          </Grid>
        </ControlTemplate>
      </local:TargetControl.Template>
    </local:TargetControl>


    <local:TargetControl Margin="150" Width="100" Height="100"
                          VerticalAlignment="Top" />
  </Grid>
</Window>
