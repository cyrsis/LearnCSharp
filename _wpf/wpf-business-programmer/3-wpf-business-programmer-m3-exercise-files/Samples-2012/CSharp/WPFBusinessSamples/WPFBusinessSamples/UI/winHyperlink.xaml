<Window x:Class="WPFBusinessSamples.winHyperlink"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hyperlink"
        WindowStartupLocation="CenterScreen"
        Height="300"
        Width="300">
  <Grid>
    <StackPanel>
        <TextBlock FontSize="14"
                   TextWrapping="Wrap"
                   Text="The following uses a Hyperlink style link to display an About Form." />
      <StackPanel Orientation="Horizontal"
                  Margin="0,10,0,0">
        <TextBlock>
          <Hyperlink Name="lnkAbout"
                     NavigateUri="winAbout.xaml"
                     RequestNavigate="lnkAbout_RequestNavigate">
            <TextBlock>Display About Form</TextBlock>
          </Hyperlink></TextBlock>
      </StackPanel>
    </StackPanel>
  </Grid>
</Window>