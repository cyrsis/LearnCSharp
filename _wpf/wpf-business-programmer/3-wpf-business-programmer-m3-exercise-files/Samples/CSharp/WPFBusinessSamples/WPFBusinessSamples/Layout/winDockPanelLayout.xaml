<Window x:Class="WPFBusinessSamples.winDockPanelLayout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Using DockPanel for Layout"
        Height="400"
        Width="400">
  <Grid>
    <DockPanel>
      <TextBlock Margin="4"
                 DockPanel.Dock="Top"
                 Text="This could be the Toolbar Area" />
      <ListBox Margin="4"
               DockPanel.Dock="Left">
        <ListBox.Resources>
          <Style TargetType="ListBoxItem">
            <Setter Property="Margin"
                    Value="4" />
          </Style>
        </ListBox.Resources>
        <ListBoxItem>Menu 1</ListBoxItem>
        <ListBoxItem>Menu 2</ListBoxItem>
        <ListBoxItem>Menu 3</ListBoxItem>
      </ListBox>
      <TextBlock Margin="4"
                 TextWrapping="Wrap">
           <Bold>This is some bold text</Bold>. <Italic>Now I am in italic.</Italic></TextBlock>
    </DockPanel>
  </Grid>
</Window>
