<Window x:Class="winGridLayout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Grid Layout"
        Height="300"
        Width="300">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <!-- The 5* means 5 times larger than the other row -->
      <RowDefinition Height="5*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="3*" />
    </Grid.ColumnDefinitions>
    <TextBlock Grid.ColumnSpan="2"
               Text="This could be the Toolbar Area" />
    <ListBox Margin="4"
             Grid.Column="0"
             Grid.Row="1">
      <ListBox.Resources>
        <Style TargetType="ListBoxItem">
          <Setter Property="Margin"
                  Value="4" />
        </Style>
      </ListBox.Resources>
      <ListBoxItem>Menu 1</ListBoxItem>
      <ListBoxItem>Menu 2</ListBoxItem>
      <ListBoxItem>Menu 3</ListBoxItem>
    </ListBox>
    <TextBlock Margin="4"
               Grid.Column="1"
               Grid.Row="1"
               TextWrapping="Wrap">
           <Bold>This is some bold text</Bold>. <Italic>Now I am in italic.</Italic></TextBlock>
  </Grid>
</Window>
