<Application x:Class="WPF_Buttons.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:my="clr-namespace:PDSA.WPF;assembly=PDSA.WPF"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/PDSA.WPF;component/PDSAButtonStyles.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <!-- Main Screen Drop Shadow Effect -->
      <DropShadowEffect Color="DarkSlateGray"
                        x:Key="mainDropShadow"
                        ShadowDepth="8" />
    </ResourceDictionary>
  </Application.Resources>
</Application>
