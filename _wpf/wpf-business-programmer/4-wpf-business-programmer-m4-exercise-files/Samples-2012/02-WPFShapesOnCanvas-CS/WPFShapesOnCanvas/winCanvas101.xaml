<Window x:Class="WPFShapesOnCanvas.winCanvas101"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Show Circle on Canvas"
        Height="300"
        Width="300">
  <Grid>
    <StackPanel Margin="0,20">
      <!-- 
      <Canvas Name="cnvMain"
              Width="80"
              Height="80">
          <Ellipse Canvas.Top="20"
                   Canvas.Left="40"
                   Width="40"
                   Height="40"
                   Fill="Gray" />
      </Canvas>
      -->
      <Canvas Name="cnvMain"
              Width="80"
              Height="80">
        <Ellipse Width="{Binding ElementName=cnvMain,
                         Path=ActualWidth}"
                 Height="{Binding ElementName=cnvMain, 
                          Path=ActualHeight}"
                 Fill="Gray" />
        <TextBlock Canvas.Top="30" 
                   Canvas.Left="30" 
                   Text="Paul" />
      </Canvas>
    </StackPanel>
  </Grid>
</Window>
