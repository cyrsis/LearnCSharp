<UserControl x:Class="WPFShapesUserControl_CS.ucShape"
             x:Name="userControlShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:WPFShapesUserControl_CS"
             Loaded="UserControl_Loaded">
  <Canvas x:Name="cnvMain"
          Width="{Binding ElementName=userControlShape, 
                          Path=ActualWidth}"
          Height="{Binding ElementName=userControlShape, 
                           Path=ActualHeight}">
    <TextBlock x:Name="tblock" />
  </Canvas>
</UserControl>
