<Window x:Class="WPFDataSamples.frmListBoxDataTrigger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:WPFComponents;assembly=WPFComponents"
        Title="Simple Data Bound List Box"
        WindowStartupLocation="CenterScreen"
        Height="390"
        Width="682">
  <Window.Resources>
    <ObjectDataProvider x:Key="odpCust"
                        ObjectType="{x:Type src:AdvWorksDataContext}"
                        MethodName="GetAllCustomers">
    </ObjectDataProvider>
    <Style TargetType="{x:Type ListBoxItem}" x:Key="TitleTrigger">
      <Style.Triggers>
        <DataTrigger Binding="{Binding Path=Title}"
                     Value="Mr.">
          <Setter Property="Foreground"
                  Value="Blue" />
        </DataTrigger>
        <DataTrigger Binding="{Binding Path=Title}"
                     Value="Ms.">
          <Setter Property="Foreground"
                  Value="Red" />
        </DataTrigger>
      </Style.Triggers>
    </Style>
  </Window.Resources>
  <Grid>
    <StackPanel>
      <ListBox FontSize="16"
               Name="listBox1"
               ItemsSource="{Binding Source={StaticResource odpCust}}"
               DisplayMemberPath="LastName"
               SelectedValuePath="CustomerID"/>
    </StackPanel>
  </Grid>
</Window>