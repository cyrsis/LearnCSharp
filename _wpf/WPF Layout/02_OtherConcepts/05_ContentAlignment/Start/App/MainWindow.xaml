<Window x:Class="CoursewareApp.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:demo="clr-namespace:DemoLib;assembly=DemoLib"
				xmlns:local="clr-namespace:CoursewareApp"
				mc:Ignorable="d"
				Title="MainWindow"
				Height="600"
				Width="525">
	<StackPanel>
		<!-- When Width is hard coded, that's the desired Width -->
		<demo:LetterBox Letter="A" Width='120'/>
		
		<!-- When Width is Auto, then element falls back to internal rules. 
      For the LetterBox that's 80px width-->

		<demo:LetterBox Letter="B"
										Width='Auto' />

		<!-- HorizontalAlignment = Stretch, 
		     VerticalAlignment = Stretch
		     grants permission to Panel to change final size -->
		<demo:LetterBox Letter="C"
										Width='Auto'
										HorizontalAlignment='Stretch'/>
	</StackPanel>
</Window>
