<UserControl x:Class="DemoLib.LetterBox"
						 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
						 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
						 xmlns:local="clr-namespace:DemoLib"
						 mc:Ignorable="d"
						 d:DesignHeight="90"
						 d:DesignWidth="90"
						 MinHeight="80"
						 MinWidth="80"
						 Background="LightBlue"
						 ToolTip="LetterBox Size">

	<Border x:Name="mainBorder"
					BorderBrush="#FF4BA9C8"
					BorderThickness="2">
		<Grid>

			<Image x:Name="mainImage"
						 Width="50"
						 Height="50"
						 Stretch='Uniform'
						 Source='Images/BlankCircleBack.png'
						 HorizontalAlignment='Center'
						 VerticalAlignment='Center' />
			<TextBlock x:Name='aBox'
								 Text='A'
								 Foreground='White'
								 FontFamily='Calibri'
								 VerticalAlignment='Center'
								 HorizontalAlignment='Center'
								 FontSize='32'
								 Margin='0,0,0,2' />
		</Grid>
	</Border>
</UserControl>
