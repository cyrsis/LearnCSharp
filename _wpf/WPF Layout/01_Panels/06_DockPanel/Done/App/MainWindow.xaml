<Window x:Class="CoursewareApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:demo="clr-namespace:DemoLib;assembly=DemoLib"
        xmlns:local="clr-namespace:CoursewareApp"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="600"
        Width="525">
  <DockPanel LastChildFill='False'>
    <demo:LetterBox Letter="A" />
    <demo:LetterBox Letter="D"
                    DockPanel.Dock='Right' />
    <demo:LetterBox Letter="B"
                    DockPanel.Dock='Top' />
    <demo:LetterBox Letter="C" DockPanel.Dock='Bottom'/>
   
    <demo:LetterBox Letter="E" DockPanel.Dock='Top' />

  </DockPanel>
</Window>
