<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    HorizontalAlignment="Center" VerticalAlignment="Center">

 <StackPanel Orientation="Horizontal">

  <GroupBox Header="Left" Margin="10">
   <StackPanel>
     <RadioButton Content="Small" />
     <RadioButton Content="Medium" />
     <RadioButton Content="Large" IsChecked="True" />
   </StackPanel>
  </GroupBox>

  <GroupBox Header="Right" Margin="10">
   <StackPanel>
     <RadioButton Content="This" />
     <RadioButton Content="That" IsChecked="True" />
     <RadioButton Content="The other"  />
   </StackPanel>
  </GroupBox>

 </StackPanel>


</Grid>

