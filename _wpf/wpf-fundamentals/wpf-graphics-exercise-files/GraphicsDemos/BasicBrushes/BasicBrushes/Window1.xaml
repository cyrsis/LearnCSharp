<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="BasicBrushes.Window1"
	x:Name="Window"
	Title="Window1"
	Width="640" Height="480">

	<Grid x:Name="LayoutRoot">
		<Rectangle HorizontalAlignment="Left" Margin="48,64,0,0" VerticalAlignment="Top" Width="191" Height="146" Fill="#FFFF0000" Stroke="#FF000000"/>
		<Rectangle HorizontalAlignment="Left" Margin="90,122,0,194" Width="201" Fill="#C53400FF" Stroke="#FF000000"/>
		<Rectangle HorizontalAlignment="Left" Margin="48,0,0,109" VerticalAlignment="Bottom" Width="201" Height="111" Stroke="#FF000000">
			<Rectangle.Fill>
				<Rectangle.Fill>
				<RadialGradientBrush GradientOrigin="0.316,0.251">
					<RadialGradientBrush.RelativeTransform>
						<TransformGroup>
							<ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="0.864" ScaleY="1.127"/>
							<SkewTransform AngleX="0" AngleY="0" CenterX="0.5" CenterY="0.5"/>
							<RotateTransform Angle="0" CenterX="0.5" CenterY="0.5"/>
							<TranslateTransform X="-0.06" Y="0.04"/>
						</TransformGroup>
					</RadialGradientBrush.RelativeTransform>
					<GradientStop Color="#FF000000" Offset="0"/>
					<GradientStop Color="#FFFBFF00" Offset="1"/>
					<GradientStop Color="#FF45FF00" Offset="0.615"/>
				</RadialGradientBrush>
			</Rectangle.Fill>
			</Rectangle.Fill>
		</Rectangle>
	</Grid>
</Window>