<Window x:Class="XAMLPatterns.ViewModelFirst.Windows.SessionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SessionWindow" Height="300" Width="300"
    Unloaded="Window_Unloaded">
    <Grid Margin="6">
        <!-- XAML Patterns (4.8): -->
        <!-- The ContentControl will implicitly select the data template -->
        <!-- based on the type of the content. -->
        <ContentControl
            x:Name="SessionContent" />
    </Grid>
</Window>
