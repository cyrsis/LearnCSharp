<Application x:Class="XAMLPatterns.ViewModelLocator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:XAMLPatterns.ViewModelLocator.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- XAML Patterns (4.7): -->
        <!-- Add the view model locator to the resource dictionary -->
        <!-- so that every view can have access to it. -->
        <vm:ViewModelLocator
            x:Key="Locator" />
    </Application.Resources>
</Application>
