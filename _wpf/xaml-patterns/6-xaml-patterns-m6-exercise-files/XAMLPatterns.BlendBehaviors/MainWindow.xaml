<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:Behaviors="clr-namespace:XAMLPatterns.BlendBehaviors.Behaviors" x:Class="XAMLPatterns.BlendBehaviors.MainWindow"
        Title="Blend Behaviors" Height="264.925" Width="187.687"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    <StackPanel
        Margin="6"
        HorizontalAlignment="Left">
        <TextBlock
            FontSize="24"
            Margin="6"
            Text="{Binding Counter}" />
        <Rectangle
            Margin="6"
            Width="90"
            Height="90"
            Fill="Blue" >
        </Rectangle>
        <Button
            Margin="6"
            Command="{Binding IncrementCommand}"
            Content="Increment" />
    </StackPanel>
</Window>
