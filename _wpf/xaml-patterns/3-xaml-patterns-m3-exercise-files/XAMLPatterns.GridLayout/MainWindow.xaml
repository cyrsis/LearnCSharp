<Window x:Class="XAMLPatterns.GridLayout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:XAMLPatterns.GridLayout.Views"
        Title="MainWindow"
    Height="513"
    Width="820">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="5*" />
            <RowDefinition
                Height="21*" />
            <RowDefinition
                Height="8*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="30*" />
            <ColumnDefinition
                Width="10*" />
        </Grid.ColumnDefinitions>

        <Views:CategoryView
            Grid.RowSpan="2" />
        <Views:ProfileView
            Grid.Column="1" />
        <Views:FeedView
            Grid.Column="1"
            Grid.Row="1" />
        <Views:TickerView
            Grid.Row="2"
            Grid.ColumnSpan="2" />

    </Grid>
</Window>
