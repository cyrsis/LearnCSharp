<Window x:Class="XAMLPatterns.BalancedWhitespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:XAMLPatterns.BalancedWhitespace.Views"
        Title="MainWindow" Height="350" Width="525">
    <Grid
        Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="21*" />
            <RowDefinition
                Height="8*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="30*" />
            <ColumnDefinition
                Width="10*" />
        </Grid.ColumnDefinitions>

        <Views:CategoryView
            Grid.RowSpan="2" />
        <Views:ProfileView
            Grid.Column="1" />
        <Views:FeedView
            Grid.Column="1"
            Grid.Row="1" />
        <Views:TickerView
            Grid.Row="2"
            Grid.ColumnSpan="2" />

    </Grid>
</Window>
