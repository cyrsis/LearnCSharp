<Application
    x:Class="XAMLPatterns.ImplicitDataTemplates.WinRT.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XAMLPatterns.ImplicitDataTemplates.WinRT"
    xmlns:sample="using:XAMLPatterns.ImplicitDataTemplates.WinRT.SampleData">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <sample:ActivitySampleDataSource
                x:Key="Sample.Activity" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
