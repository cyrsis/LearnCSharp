<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CustomBlendSDKBehaviorsDemo" 
        x:Class="CustomBlendSDKBehaviorsDemo.MainWindow"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Window.Resources>
        <DataTemplate x:Key="PersonTemplate">
            <TextBlock Text="{Binding Name}" >
            </TextBlock>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <TextBox HorizontalAlignment="Left"
            Height="23"
            Margin="32,24,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="120">
        </TextBox>
        <ListBox ItemsSource="{Binding Persons, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
            ItemTemplate="{StaticResource PersonTemplate}"
            HorizontalAlignment="Left"
            Height="210"
            Margin="32,71,0,0"
            VerticalAlignment="Top"
            Width="173" />

    </Grid>
</Window>
