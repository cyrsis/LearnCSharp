                 HorizontalAlignment="Left"
                 Height="100"
                 Margin="397,222,0,-1.2"
                 Stroke="Black"
                 VerticalAlignment="Top"
                 Width="100"
                 local:MyAttachedProperties.Speed="12" />
        <local:SomeUserControl Speed="33"
                               Background="Gray"
                               HorizontalAlignment="Left"
                               Height="100"
                               Margin="51,43,0,0"
                               VerticalAlignment="Top"
                               Width="100" />
    </Grid>
