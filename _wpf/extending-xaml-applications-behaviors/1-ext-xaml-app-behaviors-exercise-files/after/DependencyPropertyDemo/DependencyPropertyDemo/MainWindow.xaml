<Window xmlns:DependencyPropertyDemo="clr-namespace:DependencyPropertyDemo"
        x:Class="DependencyPropertyDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
