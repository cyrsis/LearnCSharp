<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" x:Class="BlendBehaviorsWPFDemo.MainWindow"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<Grid x:Name="grid" HorizontalAlignment="Left" Height="118.633" Margin="165.13,117.581,0,0" VerticalAlignment="Top" Width="0">
			<i:Interaction.Triggers>
				<i:EventTrigger EventName="MouseEnter" SourceObject="{Binding ElementName=rectangle}">
					<ei:ChangePropertyAction PropertyName="Background">
						<ei:ChangePropertyAction.Value>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="Black" Offset="0"/>
								<GradientStop Color="#FFF60B0B" Offset="1"/>
							</LinearGradientBrush>
						</ei:ChangePropertyAction.Value>
					</ei:ChangePropertyAction>
				</i:EventTrigger>
				<i:EventTrigger EventName="MouseEnter" SourceName="rectangle">
					<ei:ChangePropertyAction PropertyName="Width" Value="300"/>
				</i:EventTrigger>
			</i:Interaction.Triggers>
		</Grid>
		<Rectangle x:Name="rectangle" Fill="#FF06069B" HorizontalAlignment="Left" Height="62.674" Margin="41.476,32.886,0,0" Stroke="Black" VerticalAlignment="Top" Width="105.022"/>
        
	</Grid>
</Window>
