<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlendWin8Demo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="BlendWin8Demo.MainPage"
    mc:Ignorable="d">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Grid x:Name="grid" HorizontalAlignment="Left" Height="260" Margin="291,428,0,0" VerticalAlignment="Top" Width="264">
			<Interactivity:Interaction.Behaviors>
				<Core:EventTriggerBehavior EventName="PointerEntered" SourceObject="{Binding ElementName=rectangle}">
					<Core:ChangePropertyAction PropertyName="Background" TargetObject="{Binding ElementName=grid}">
						<Core:ChangePropertyAction.Value>
							<SolidColorBrush Color="#FFF70D0D"/>
						</Core:ChangePropertyAction.Value>
					</Core:ChangePropertyAction>
				</Core:EventTriggerBehavior>
			</Interactivity:Interaction.Behaviors>
		</Grid>
		<Rectangle x:Name="rectangle" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Margin="185,93,0,0" Stroke="Black" VerticalAlignment="Top" Width="100"/>

	</Grid>
</Page>
