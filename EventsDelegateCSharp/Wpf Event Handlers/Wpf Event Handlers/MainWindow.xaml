<Window x:Class="Wpf_Event_Handlers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Event_Handlers"
        mc:Ignorable="d"
        Title="Wpf Event Handlers"
        Height="150" Width="525"
        FontSize="16">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
        </Grid.Resources>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="button1" Content="Button 1"/>
            <Button x:Name="button2" Content="Button 2"/>
            <Button x:Name="button3" Content="Button 3"/>
        </StackPanel>
    </Grid>
</Window>
